{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run all tests",
            "type": "shell",
            "command": "cargo make validate",
            "problemMatcher": []
        },
        {
            "label": "Run all tests with env var",
            "type": "shell",
            "command": "cargo make validate-env",
            "problemMatcher": []
        },
        {
            "label": "Format Rust code",
            "type": "shell",
            "command": "cargo make fmt",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Format Rust code and commit",
            "type": "shell",
            "command": "cargo make fmt-commit",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Deploy dryrun",
            "type": "shell",
            "command": "cargo make release-dryrun",
            "options": {
                "env": {
                    "BUMP_LEVEL": "${input:bumpType}"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Deploy",
            "type": "shell",
            "command": "cargo make release",
            "options": {
                "env": {
                    "BUMP_LEVEL": "${input:bumpType}"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Generate changelog",
            "type": "shell",
            "command": "cargo make changelog",
            "problemMatcher": []
        },
        {
            "label": "Update changelog",
            "type": "shell",
            "command": "cargo make changelog-commit",
            "problemMatcher": []
        },
        {
            "label": "Build doc",
            "type": "shell",
            "command": "cargo make doc",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "bumpType",
            "type": "pickString",
            "description": "Choose bump type",
            "options": ["patch", "minor", "major"],
            "default": "patch"
          }
    ]
}