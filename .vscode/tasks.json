{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run all tests",
            "type": "shell",
            "command": "cargo make full-test",
            "problemMatcher": []
        },
        {
            "label": "Format Rust code",
            "type": "shell",
            "command": "cargo make fmt",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Format Rust code and commit",
            "type": "shell",
            "command": "cargo make fmt-commit",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Deploy dryrun",
            "type": "shell",
            "command": "cargo",
            "args": ["make", "release-dryrun", "${input:bumpType}"],
            "problemMatcher": []
        },
        {
            "label": "Deploy",
            "type": "shell",
            "command": "cargo",
            "args": ["make", "release", "${input:bumpType}"],
            "problemMatcher": []
        },
        {
            "label": "Generate changelog",
            "type": "shell",
            "command": "cargo make changelog",
            "problemMatcher": []
        },
        {
            "label": "Update changelog",
            "type": "shell",
            "command": "cargo make changelog-commit",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "bumpType",
            "type": "pickString",
            "description": "Choose bump type",
            "options": ["patch", "minor", "major"],
            "default": "patch"
          }
    ]
}